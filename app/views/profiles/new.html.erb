<body style="background-color:#E69B31;">
<h1 style="color:blue;">User Profile</h1>
<%= form_for :profile  do |f| %>
   
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status  %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, ['Male', 'Female']%>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address  %>
  </div>
  
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.text_field :dob %>
  </div>
  <div class="actions">
    <%= f.submit "Add Info" %>
  </div>
 
<% end %>
<%= link_to "Back",root_path,class: "btn btn-primary btn-xs" %>
</body>