<body style="background-color:#E69B31;">
<h1 style="color:blue;">User Profile</h1>
<%= form_for :profile, url: user_profiles_path(:id => params[:user_id]), method: :post do |f| %>
   
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status,:style =>"height:40px;width:500px;"  %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, ['Male', 'Female']%>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address,:style =>"height:40px;width:500px;"  %>
  </div>
  
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.text_field :dob,:style =>"height:40px;width:500px;" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit",class: "btn btn-primary btn-ms" %>
  </div>
<% end %>
<%= link_to "Back",root_path,class: "btn btn-primary btn-xs" %>
</body>



