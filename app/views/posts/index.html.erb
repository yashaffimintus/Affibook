<h1>Listing Posts</h1>
 
<table border= "1" style="width:70%">
  <tr>
    <th>Title</th>
    <th>Comment</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to 'Comment', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post)  %></td>
       <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete a post ?' }  %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Back", root_url,class: "btn btn-primary btn-xs"%>