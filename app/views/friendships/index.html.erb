<body style="background-color:#F1B7BA;">
   <% unless @friendships.blank? %>
        <% @friendships.where(:approved => false).each do|wel| %>
      
        <h4>Friend Requests</h4>
      <div class="CSSTableGenerator" >  
        <table>
          <tr>
              <th>FirstName</th>
              <th>LastName</th>
              <th>Accept</th>
              <th>Reject</th>
          </tr> 
             
          <tr>   
              <td><%= wel.user.first_name %></td> 
              <td><%= wel.user.last_name %></td> 
              <td><%= link_to "Accept",friendship_path(:id => wel),method: :put %></td>
              <td><%= link_to "Decline",friendship_path(:id => wel.friend_id),method: :delete,
                   data: { confirm: 'Are you sure?' } %></td>
          </tr>
           
        </table> 
      </div>  
        <%end%>
        <%else%>
        <%flash[:notice] = "Request sended...!"%>
    <%end%> 
</body>     
    
<%= link_to 'Back',  users_myuser_path,class: "btn btn-primary btn-xs" %>
          
 
                
               
 

               
              
              
            
      
        
        


                  
           

        

        
        
        


